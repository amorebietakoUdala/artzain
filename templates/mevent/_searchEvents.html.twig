{% extends 'base.html.twig' %}

{% block title %}{{'mevent.search.izenburua' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bower_components/bootstrap-table/dist/bootstrap-table.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bower_components/jquery-ui/themes/base/jquery-ui.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bower_components/fontawesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bower_components/gijgo/dist/combined/css/gijgo.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block message %}
       {{ include('common/messages.html.twig') }}
{% endblock %}


{% block body %}
    <main>
	    <ul class="container detail-list">
		<li><b>{{ 'label.name' | trans}}</b>: {{ mevent.name }}</li>
		<li><b>{{ 'label.filterCondition' | trans }}</b>: {{ mevent.filterCondition|length > 50 ? mevent.filterCondition|slice(0, 50) ~ '...' : mevent.filterCondition }}</li>
		<li><b>{{ 'label.frecuency' | trans }}</b>: {{ mevent.frecuency}}</li>
		<li><b>{{ 'label.unit' | trans }}</b>: {{ (constant('App\\Entity\\MonitorizableEvent::UNITS')[mevent.unit]) | trans }} </li>
	    </ul>
	    <ul class="container detail-list">
		<li><b>{{ 'label.successCondition' | trans }}</b>: {{ mevent.successCondition }}</li>
		<li><b>{{ 'label.failureCondition' | trans }}</b>: {{ mevent.failureCondition}}</li>
	    </ul>
	
	{{ include('mevent/_searchEvents_form.html.twig',{
			    }) }}
	<div class="container">
	    <table id="taula" class="bootstrap-table mt-3">
		<thead>
		    <tr>
			<th data-sortable="true">{{"label.date" | trans | capitalize}}</th>
			<th data-sortable="true">{{"label.origin" | trans | capitalize}}</th>
			<th data-sortable="true">{{"label.fromAddress" | trans | capitalize}}</th>
			<th data-sortable="true">{{"label.subject" | trans | capitalize}}</th>
			<th data-sortable="true">{{"label.status" | trans | capitalize}}</th>
			<th>{{ "tableheader.options" | trans | capitalize}}</th>
		    </tr>
		</thead>
		<tbody>
		    {% if events is defined and events | length > 0 %}
			{% for event in events %}
			<tr>
			    <td>{{ event.date | date('Y-m-d H:i:s') }}</td>
			    <td>{{ event.origin }}</td>
			    <td>{{ event.fromAddress }}</td>
			    <td>{{ event.subject }}</td>
			    <td>{{ event.mailId }}</td>
			    <td class="white-space-nowrap col-1">
{#				<a href="{{ path ('admin_mevent_show', {'id': mevent.id }) }}"><i class="fa fa-eye prefix" title="{{"icon.show" | trans | capitalize }}"></i></a>
				    &nbsp;<a href="{{ path ('admin_mevent_edit', {'id': mevent.id }) }}"><i class="fa fa-edit prefix" title="{{"icon.edit" | trans | capitalize}}"></i></a>
				    &nbsp;<a class="js-ezabatu_botoia" data-url="{{ path ('admin_mevent_delete', {'id': mevent.id }) }}" href="#"><i class="fa fa-trash prefix" title="{{"icon.delete" | trans | capitalize}}"></i></a>
				    &nbsp;<a class="js-bilatu_botoia" href="{{ path ('admin_mevent_search', {'id': mevent.id }) }}"><i class="fa fa-search prefix" title="{{"icon.search" | trans | capitalize}}"></i></a>
#}				    &nbsp;<a id="tr{{loop.index}}" class="trigger" onclick="showDialog('ov{{loop.index}}');" href="#"><i class="fa fa-file-text-o prefix" title="{{"icon.details" | trans | capitalize}}"></i></a>
				    &nbsp;<a href="{{ path ('admin_mevent_try', {'id': mevent.id, 'event': event.id }) }}"><i class="fa fa-edit prefix" title="{{"icon.try" | trans | capitalize}}"></i></a>
				    &nbsp;<a href="{{ path ('admin_mevent_match', {'id': mevent.id, 'event': event.id }) }}"><i class="fa fa-check prefix" title="{{"icon.match" | trans | capitalize}}"></i></a>
{#				    &nbsp;<a href="{{ path('admin_event_new_mevent', {'event': event.id }) }}"><i class="fa fa-plus"></i></a>
#}			    </td>
			</tr>
			{% endfor %}
		    {% else %}
			<tr><td class="text-center" colspan="7">{{"messages.results0" | trans }}</td></tr>
		    {% endif %}
		</tbody>
	    </table>
	    {% if events is defined and events | length > 0 %}
		    {% for event in events %}
		    <div id="ov{{loop.index}}" class="overlay" style="display:none">
			<div id="pp{{loop.index}}" class="popup">
			     <div id="cl{{loop.index}}" class="close">X</div>
			     {% if event.details != null %}
			     {{ event.details | striptags('<table><th><tr><td><p><b><span><a><br><blockguote>') | raw }}
			     {% else %}
				 <p style="text-align: center">{{ 'messages.nodetails' | trans }}</p>
			    {% endif%}
			</div>
		    </div>
		    {% endfor %}
	    {% endif %}
	    <button id="btnCancel" class="btn btn-secondary" type="button" data-url="{{ path("admin_mevent_list")}}">{{'button.cancel' | trans | capitalize }}</button>
	    {#	    <span id="btn-berria" class="pull-right"><a href="{{ path('admin_mevent_new') }}" class="btn btn-primary fixed-bottom-right rounded-circle"><i class="fa fa-plus"></i></a></span>
#}	</div>
    </main>
{% endblock %}

{% block javascripts %}
    {{  parent() }}
    <script type="text/javascript" src="{{ asset('bower_components/bootstrap-table/dist/bootstrap-table.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/bootstrap-table/dist/extensions/export/bootstrap-table-export.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/bootstrap-table/dist/locale/bootstrap-table-es-ES.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/bootstrap-table/dist/locale/bootstrap-table-eu-EU.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/tableexport.jquery.plugin/tableExport.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/gijgo/dist/combined/js/gijgo.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/gijgo/dist/combined/js/messages/messages.es-es.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/mevent_search.js') }}"></script>
    <script type="text/javascript">
    $(document).ready(function(){
	$('.js-datepicker1').datetimepicker({
	 uiLibrary: 'bootstrap4',
	 locale: 'es-es',
	 format: 'yyyy-mm-dd HH:MM',
	 modal: true,
	 footer: true
	});
	$('.js-datepicker2').datetimepicker({
	  uiLibrary: 'bootstrap4',
	  locale: 'es-es',
	  format: 'yyyy-mm-dd HH:MM',
	  modal: true,
	  footer: true
	});
	$('.overlay').hide();
	$('.close').click(function(e) {
	    hideDialog(e);
	    $('.bootstrap-table').show();
	    console.log("Closed!!!");
	});
	$('#taula').bootstrapTable({
	        cache : false,
		showExport: false,
		exportTypes: {exportTypes:['excel']},
		exportDataType: 'all',
		exportOptions: {
{#		    fileName: "eskakizunak",
		    worksheetName: "test1",
		    ignoreColumn: ['aukerak']
#}		},
		showColumns: false,
		pagination: true,
		search: true,
		striped: true,
		sortStable: true,
		pageSize: 10,
		pageList: [10,25,50,100],
		sortable: true,
		locale: 'es_{{ app.request.getLocale() | upper }}'
	});
	var $table = $('#taula');
	$(function () {
	    $('#toolbar').find('select').change(function () {
		$table.bootstrapTable('destroy').bootstrapTable({
		    exportDataType: $(this).val(),
		});
	    });
	});
	var view = View();
	view.onBtnSaveClick();
	view.onBtnResetClick();
	view.onBtnCancelClick();
    });
    function showDialog (id) {
	console.log(id);
	$('#'+id).fadeIn(300);
	$('.bootstrap-table').hide();
    }
    function hideDialog (e) {
	number = e.target.id.slice(2);
	console.log(e.target.id);
	console.log(number);
	$('#ov'+number).fadeOut(300);
    }
    </script>

{% endblock javascripts %}