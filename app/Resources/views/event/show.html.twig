{% extends 'base.html.twig' %}

{% block title %}{{"event.show.izenburua" | trans | capitalize}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bower_components/jquery-ui/themes/base/jquery-ui.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bower_components/fontawesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}


{% block body %}
   <div class="container-fluid">
       {{ include('event/_form.html.twig',{'showSaveButton': false }) }}
    </div>{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" language="javascript">
	$(document).ready(function(){
	    $(".js-btn_cancel").click(function(e) {
		e.preventDefault();
		var url = $(e.currentTarget).data('url');
		document.location.href= url;
	    });
	});    
    </script>
{% endblock%}